    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #00c6ff, #0072ff); /* Beautiful gradient background */
            color: #333;
        }

        /* Navbar Styles */
        .navbar {
            background: #343a40;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            color: #fff;
            text-decoration: none;
            font-size: 2em;
            letter-spacing: 1px;
        }

        .navbar-nav {
            display: flex;
            gap: 25px;
        }

        .navbar-nav .nav-link {
            color: #fff;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1.1em;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            background-color: #495057;
            transform: scale(1.1);
            color: #ffd700;
        }

        /* Container and Grid Styles */
        .container {
            margin: 3rem auto;
            padding: 0 20px;
            max-width: 1200px;
            color: #fff;
        }

        h1 {
            text-align: center;
            font-size: 3em;
            margin-bottom: 40px;
            color: #fff;
            font-weight: bold;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 30px;
        }

        /* Product Card Styles */
        .product-card {
            background-color: #fff;
            border-radius: 12px;
            overflow: hidden;
            text-align: center;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
            transform: scale(1);
            transition: all 0.3s ease;
            background: #f7f7f7;
        }

        .product-card:hover {
            transform: scale(1.05);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .product-card img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card img:hover {
            transform: scale(1.1);
        }

        .product-card h3 {
            margin: 15px 0;
            font-size: 1.5em;
            color: #333;
            font-weight: bold;
        }

        .product-card p {
            margin: 0;
            padding: 0 15px 20px;
            font-size: 1em;
            color: #555;
        }

        .product-card a {
            display: inline-block;
            margin: 10px 0 20px;
            padding: 12px 25px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.2s;
        }

        .product-card a:hover {
            background-color: #0056b3;
            transform: translateY(-3px);
        }

        /* Footer Styles */
        footer {
            background: #343a40;
            color: #fff;
            text-align: center;
            padding: 20px;
            margin-top: 50px;
        }

        footer a {
            color: #fff;
            text-decoration: none;
            font-weight: bold;
        }

        footer a:hover {
            text-decoration: underline;
        }

